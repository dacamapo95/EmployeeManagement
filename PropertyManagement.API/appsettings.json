{
  "AllowedHosts": "*",

  "Keycloak": {
    "Authority": "http://localhost:8080/realms/employeemanagement",
    "AuthorityExternal": "http://localhost:8080/realms/employeemanagement",
    "Audience": "employee-api",
    "RequireHttpsMetadata": false,
    "ValidateAudience": false,
    "ValidateIssuer": true,
    "ValidateLifetime": true
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "EmployeeManagement.API"
    }
  }
}
